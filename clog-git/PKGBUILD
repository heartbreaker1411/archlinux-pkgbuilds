_p=clog

pkgname=${_p}-git
pkgver=1
pkgrel=1
pkgdesc="Simple log rotation pipe/utility on size limit."
arch=(i686 x86_64 armv7 aarch64)
url='https://github.com/jamwt/clog/'
license=(BSD-3)
depends=()
makedepends=(git)
source=("${_p}::git+https://github.com/jamwt/clog/")
sha256sums=(SKIP)

pkgver() {
	cd $_p
	printf "%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd $_p
	make
}

package() {
	cd $_p
	install -D -m0755 clog  "$pkgdir"/usr/bin/clog
}
